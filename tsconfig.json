{
  "compilerOptions": {
    /* Base Options: */
    "target": "ES2022",           /* Generates modern JS code (Node 16+) */
    "module": "NodeNext",         /* Uses native ESM modules (import/export) */
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],            /* Includes latest JS features */
    
    /* Strictness & Types: */
    "strict": true,               /* Enable all strict type-checking options */
    "noImplicitAny": true,        /* Raise error on expressions with implied 'any' type */
    "esModuleInterop": true,      /* Crucial: Allows importing CommonJS modules (like Express) easily */
    "skipLibCheck": true,         /* Skip type checking of declaration files (speeds up build) */
    "forceConsistentCasingInFileNames": true,

    /* Project Structure: */
    "rootDir": "./src",           /* where your .ts files are */
    "outDir": "./dist",           /* where .js files will be built */
    "sourceMap": true,            /* Helps with debugging */
    "removeComments": true,       /* Removes comments from build */
    
    /* Modern Import Rules: */
    "resolveJsonModule": true,    /* Allows importing .json files */
    "verbatimModuleSyntax": false /* Set to false to avoid the specific error you saw earlier */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}